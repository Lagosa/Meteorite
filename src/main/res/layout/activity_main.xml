<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="116dp"
            tools:layout_editor_absoluteX="62dp" android:gravity="center" tools:ignore="MissingConstraints">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:background="@drawable/round_container" android:gravity="center">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp" app:srcCompat="@drawable/ic_launcher_background"
                    android:id="@+id/imageView"
                    android:layout_marginBottom="50dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="High score: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="24sp"/>
                <TextView

                        android:text="SCORE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/high_score" android:layout_weight="1"
                        android:textStyle="bold" android:textSize="18sp"/>
            </LinearLayout>
            <Button
                    android:text="Start game"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" android:id="@+id/start_button" android:textStyle="bold"
                    android:textAllCaps="false" android:textSize="18sp" android:background="@drawable/round_button"
                    android:clickable="true" android:fontFamily="sans-serif" android:textColor="#ffffff"
                    android:layout_marginTop="40dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>